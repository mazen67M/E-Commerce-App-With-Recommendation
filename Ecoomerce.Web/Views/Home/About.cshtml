@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">About Us</li>
        </ol>
    </nav>

    <!-- Hero Section -->
    <div class="row align-items-center mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h1 class="display-4 fw-bold text-gradient mb-4">
                About <span class="text-primary">ShopSmart</span>
            </h1>
            <p class="lead text-muted mb-4">
                We're more than just an online store. We're your trusted partner in delivering quality products 
                with exceptional service, right to your doorstep.
            </p>
            <div class="d-flex gap-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-bag me-2"></i>Shop Now
                </a>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-envelope me-2"></i>Contact Us
                </a>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="position-relative">
                <div class="about-image-container rounded-4 overflow-hidden shadow-lg">
                    <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=600" 
                         alt="About ShopSmart" class="img-fluid w-100" style="height: 400px; object-fit: cover;">
                </div>
                <div class="position-absolute bottom-0 start-0 translate-middle-y ms-n4 d-none d-lg-block">
                    <div class="bg-primary text-white p-4 rounded-4 shadow">
                        <h3 class="h2 mb-0">5+</h3>
                        <p class="mb-0 small">Years of Excellence</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="row g-4 mb-5">
        <div class="col-md-3 col-6">
            <div class="text-center p-4 rounded-4 bg-light hover-lift">
                <div class="display-4 fw-bold text-primary mb-2">10K+</div>
                <p class="text-muted mb-0">Happy Customers</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="text-center p-4 rounded-4 bg-light hover-lift">
                <div class="display-4 fw-bold text-success mb-2">5K+</div>
                <p class="text-muted mb-0">Products</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="text-center p-4 rounded-4 bg-light hover-lift">
                <div class="display-4 fw-bold text-info mb-2">50+</div>
                <p class="text-muted mb-0">Categories</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="text-center p-4 rounded-4 bg-light hover-lift">
                <div class="display-4 fw-bold text-warning mb-2">4.9</div>
                <p class="text-muted mb-0">Customer Rating</p>
            </div>
        </div>
    </div>

    <!-- Our Story -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h2 class="h1 fw-bold mb-4">Our Story</h2>
            <p class="lead text-muted">
                Founded in 2019, ShopSmart began with a simple mission: to make quality products accessible 
                to everyone. What started as a small online store has grown into a trusted marketplace 
                serving thousands of customers across Egypt and beyond.
            </p>
            <p class="text-muted">
                We believe shopping should be easy, enjoyable, and worry-free. That's why we carefully 
                curate our product selection, partner with reliable brands, and provide outstanding 
                customer support every step of the way.
            </p>
        </div>
    </div>

    <!-- Values Section -->
    <div class="row g-4 mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="h1 fw-bold">Our Values</h2>
            <p class="text-muted">What drives us every day</p>
        </div>
        <div class="col-md-4">
            <div class="feature-box h-100">
                <div class="feature-icon">
                    <i class="bi bi-heart"></i>
                </div>
                <h4 class="fw-bold">Customer First</h4>
                <p class="text-muted mb-0">
                    Your satisfaction is our top priority. We go above and beyond to ensure 
                    you have the best shopping experience.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-box h-100">
                <div class="feature-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h4 class="fw-bold">Quality Assured</h4>
                <p class="text-muted mb-0">
                    We partner only with trusted brands and verify product quality 
                    before listing on our platform.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-box h-100">
                <div class="feature-icon">
                    <i class="bi bi-lightning"></i>
                </div>
                <h4 class="fw-bold">Fast Delivery</h4>
                <p class="text-muted mb-0">
                    Quick and reliable shipping to get your orders to you 
                    as fast as possible.
                </p>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="h1 fw-bold">Meet Our Team</h2>
            <p class="text-muted">The people behind ShopSmart</p>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm hover-lift">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 100px; height: 100px; font-size: 2.5rem;">
                        <i class="bi bi-person"></i>
                    </div>
                    <h5 class="fw-bold mb-1">Ahmed Hassan</h5>
                    <p class="text-primary small mb-2">Founder & CEO</p>
                    <p class="text-muted small mb-0">
                        Visionary leader with 10+ years in e-commerce and retail.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm hover-lift">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 100px; height: 100px; font-size: 2.5rem;">
                        <i class="bi bi-person"></i>
                    </div>
                    <h5 class="fw-bold mb-1">Sarah Mohamed</h5>
                    <p class="text-success small mb-2">Head of Operations</p>
                    <p class="text-muted small mb-0">
                        Ensuring smooth operations and customer satisfaction.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm hover-lift">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-info text-white d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 100px; height: 100px; font-size: 2.5rem;">
                        <i class="bi bi-person"></i>
                    </div>
                    <h5 class="fw-bold mb-1">Omar Ali</h5>
                    <p class="text-info small mb-2">Tech Lead</p>
                    <p class="text-muted small mb-0">
                        Building the platform that powers your shopping experience.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center py-5 px-4 rounded-4 gradient-primary">
        <h2 class="text-white fw-bold mb-3">Ready to Start Shopping?</h2>
        <p class="text-white-50 mb-4">Discover thousands of products at amazing prices</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg px-5">
            <i class="bi bi-bag me-2"></i>Explore Products
        </a>
    </div>
</div>

@section Styles {
    <style>
        .text-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        .hover-lift {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
        }
    </style>
}
