@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Our Store</h1>
</div>

<h2 class="mt-5 mb-4">Featured Products</h2>
<div class="row">
    @foreach (var product in Model.FeaturedProducts)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.ProductID">
                    <img src="@(product.ImageURL ?? "/images/placeholder.jpg")" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                </a>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted">@product.CategoryName</p>
                    <h6 class="card-subtitle mb-2">@product.Price.ToString("C")</h6>
                    <div class="mt-auto">
                        <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.ProductID" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>