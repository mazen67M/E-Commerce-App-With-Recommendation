@{
    ViewData["Title"] = "Email Confirmed";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .confirm-container {
            display: flex;
            min-height: 100vh;
        }
        
        .confirm-illustration {
            flex: 1;
            background: linear-gradient(180deg, #86EFAC 0%, #22C55E 50%, #16A34A 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            position: relative;
            overflow: hidden;
        }
        
        .confirm-illustration::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 50% 50%, rgba(255,255,255,0.1) 0%, transparent 70%);
        }
        
        .confirm-illustration img {
            max-width: 90%;
            max-height: 80vh;
            object-fit: contain;
            position: relative;
            z-index: 1;
            filter: drop-shadow(0 20px 40px rgba(0,0,0,0.2));
            animation: float 4s ease-in-out infinite;
        }
        
        @@keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }
        
        .confirm-content-section {
            flex: 1;
            background: linear-gradient(180deg, #f8f9fc 0%, #e9ecef 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 3rem 4rem;
            position: relative;
        }
        
        .confirm-content-wrapper {
            max-width: 450px;
            width: 100%;
            margin: 0 auto;
            text-align: center;
        }
        
        .success-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #86EFAC 0%, #22C55E 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            box-shadow: 0 15px 40px rgba(34, 197, 94, 0.3);
            animation: pulse 2s ease-in-out infinite;
        }
        
        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        .success-icon i {
            font-size: 3.5rem;
            color: #fff;
        }
        
        .confirm-content-wrapper h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 1rem;
        }
        
        .confirm-content-wrapper p {
            color: #6b7280;
            font-size: 1.1rem;
            margin-bottom: 2.5rem;
            line-height: 1.6;
        }
        
        .btn-login {
            display: inline-block;
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            color: #fff;
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            border: none;
            border-radius: 12px;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(34, 197, 94, 0.35);
        }
        
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(34, 197, 94, 0.45);
            color: #fff;
        }
        
        .confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            background: #22c55e;
            animation: confetti 3s ease-in-out infinite;
        }
        
        .confetti:nth-child(1) { left: 10%; animation-delay: 0s; background: #f59e0b; }
        .confetti:nth-child(2) { left: 20%; animation-delay: 0.3s; background: #ef4444; }
        .confetti:nth-child(3) { left: 30%; animation-delay: 0.6s; background: #3b82f6; }
        .confetti:nth-child(4) { left: 40%; animation-delay: 0.9s; background: #8b5cf6; }
        .confetti:nth-child(5) { left: 50%; animation-delay: 1.2s; background: #22c55e; }
        .confetti:nth-child(6) { left: 60%; animation-delay: 1.5s; background: #f59e0b; }
        .confetti:nth-child(7) { left: 70%; animation-delay: 1.8s; background: #ef4444; }
        .confetti:nth-child(8) { left: 80%; animation-delay: 2.1s; background: #3b82f6; }
        .confetti:nth-child(9) { left: 90%; animation-delay: 2.4s; background: #8b5cf6; }
        
        @@keyframes confetti {
            0% { transform: translateY(-100%) rotate(0deg); opacity: 1; }
            100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
        }
        
        @@media (max-width: 992px) {
            .confirm-container {
                flex-direction: column;
            }
            
            .confirm-illustration {
                min-height: 250px;
                padding: 1.5rem;
            }
            
            .confirm-illustration img {
                max-height: 200px;
            }
            
            .confirm-content-section {
                padding: 2rem;
            }
            
            .confirm-content-wrapper h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="confirm-container">
        <!-- Left Section - Illustration -->
        <div class="confirm-illustration">
            <img src="~/images/login.png" alt="Success Illustration" />
        </div>
        
        <!-- Right Section - Content -->
        <div class="confirm-content-section">
            <!-- Confetti Animation -->
            <div class="confetti"></div>
            <div class="confetti"></div>
            <div class="confetti"></div>
            <div class="confetti"></div>
            <div class="confetti"></div>
            <div class="confetti"></div>
            <div class="confetti"></div>
            <div class="confetti"></div>
            <div class="confetti"></div>
            
            <div class="confirm-content-wrapper">
                <div class="success-icon">
                    <i class="bi bi-check-lg"></i>
                </div>
                
                <h1>Email Confirmed!</h1>
                <p>
                    Congratulations! Your email has been successfully verified. 
                    Your account is now fully activated and ready to use.
                </p>
                
                <a asp-action="Login" asp-controller="Account" class="btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In Now
                </a>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
