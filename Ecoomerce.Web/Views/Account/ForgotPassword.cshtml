@using Ecommerce.Application.ViewModels.Forms___Input_Models
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning bg-gradient text-white text-center rounded-top-4">
                    <h2 class="mb-0"><i class="bi bi-key me-2"></i> Forgot Password</h2>
                </div>
                <div class="card-body px-4 py-4">
                    <p class="text-muted mb-4">Enter your email address and we'll send you a link to reset your password.</p>
                    
                    <form asp-action="ForgotPassword" method="post" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-1 small mb-4"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" aria-label="Email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg fw-semibold shadow-sm">
                                <i class="bi bi-send me-1"></i> Send Reset Link
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-white text-center rounded-bottom-4 py-3">
                    <a asp-action="Login" class="fw-semibold text-warning text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i> Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
