<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecoomerce.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecoomerce.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop me-2"></i>ShopSmart
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="productsDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-grid"></i> Products
                            </a>
                            <ul class="dropdown-menu shadow-sm border-0" aria-labelledby="productsDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">
                                        <i class="bi bi-grid"></i> All Products
                                    </a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Featured">
                                        <i class="bi bi-star-fill text-warning"></i> Featured
                                    </a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product"
                                        asp-action="TopSelling">
                                        <i class="bi bi-fire text-danger"></i> Top Selling
                                    </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">
                                <i class="bi bi-box-seam"></i> Orders
                            </a>
                        </li>
                    </ul>
                    
                    <div class="d-flex align-items-center">
                        <!-- Search Form -->
                        <form class="d-none d-md-flex me-3" asp-controller="Product" asp-action="Index" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control" name="searchTerm" placeholder="Search products..." aria-label="Search">
                                <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
                            </div>
                        </form>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Wishlist Button -->
                            <a class="btn btn-outline-secondary position-relative me-2" asp-area="Profile" asp-controller="Wishlist" asp-action="Index" title="Wishlist">
                                <i class="bi bi-heart"></i>
                                <span id="wishlistCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">
                                    0
                                </span>
                            </a>
                            
                            <!-- Cart Button -->
                            <a class="btn btn-outline-primary position-relative me-3" asp-controller="Cart" asp-action="Index" title="Shopping Cart">
                                <i class="bi bi-cart3"></i>
                                <span id="cartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">
                                    0
                                </span>
                            </a>
                            
                            <!-- User Account Dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userMenuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0" aria-labelledby="userMenuDropdown">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                            <i class="bi bi-shield-check text-danger"></i> Admin Dashboard
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a></li>
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="OrderHistory" asp-action="Index">
                                        <i class="bi bi-receipt"></i> Order History
                                    </a></li>
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="Wishlist" asp-action="Index">
                                        <i class="bi bi-heart"></i> My Wishlist
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-gear"></i> Settings
                                    </a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">
                                        <i class="bi bi-question-circle"></i> Help
                                    </a></li>
                                </ul>
                            </div>
                        }
                        
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container my-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

       <partial name="_Footer" />
       
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
