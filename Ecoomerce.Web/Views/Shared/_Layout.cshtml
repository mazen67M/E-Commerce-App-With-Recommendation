<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopSmart</title>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecoomerce.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <!-- Minimal Navbar -->
        <nav class="navbar navbar-expand-lg navbar-minimal sticky-top">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fw-bold">ShopSmart</span>
                </a>
                
                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" 
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list fs-4"></i>
                </button>
                
                <!-- Main Navigation -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Center Navigation Links -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Shop</a>
                        </li>
                        <!-- Dynamic Categories Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">Categories</a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                @await Component.InvokeAsync("NavbarCategories")
                            </ul>
                        </li>
                        <!-- Featured & Latest Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="featuredDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">Featured</a>
                            <ul class="dropdown-menu" aria-labelledby="featuredDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Featured">
                                        <i class="bi bi-star-fill text-warning me-2"></i>Featured Products
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Latest">
                                        <i class="bi bi-clock-history text-primary me-2"></i>Latest Arrivals
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="TopSelling">
                                        <i class="bi bi-fire text-danger me-2"></i>Top Selling
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="OnSale">
                                        <i class="bi bi-percent text-success me-2"></i>On Sale
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">FAQs</a>
                        </li>
                    </ul>
                    
                    <!-- Right Side: Search & Actions -->
                    <div class="d-flex align-items-center gap-2">
                        <!-- Search -->
                        <form class="search-minimal d-none d-lg-block" asp-controller="Product" asp-action="Index" method="get">
                            <i class="bi bi-search search-icon"></i>
                            <input type="text" name="searchTerm" placeholder="Search products...">
                        </form>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Wishlist -->
                            <a class="btn btn-link position-relative p-2" asp-area="Profile" asp-controller="Wishlist" asp-action="Index" title="Wishlist">
                                <i class="bi bi-heart fs-5"></i>
                                <span id="wishlistCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none" style="font-size: 0.65rem;">0</span>
                            </a>
                            
                            <!-- Cart -->
                            <a class="btn btn-link position-relative p-2" asp-controller="Cart" asp-action="Index" title="Cart">
                                <i class="bi bi-bag fs-5"></i>
                                <span id="cartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none" style="font-size: 0.65rem;">0</span>
                            </a>
                            
                            <!-- User Menu -->
                            <div class="dropdown">
                                <button class="btn btn-link p-2 dropdown-toggle" type="button" id="userMenuDropdown" 
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle fs-5"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userMenuDropdown">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                            <i class="bi bi-shield-check me-2 text-danger"></i>Admin Dashboard</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="Dashboard" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-2"></i>My Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="OrderHistory" asp-action="Index">
                                        <i class="bi bi-receipt me-2"></i>Order History</a></li>
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="Wishlist" asp-action="Index">
                                        <i class="bi bi-heart me-2"></i>My Wishlist</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="ManageProfile" asp-action="Index">
                                        <i class="bi bi-person me-2"></i>Profile Settings</a></li>
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="Address" asp-action="Index">
                                        <i class="bi bi-geo-alt me-2"></i>Address Book</a></li>
                                    <li><a class="dropdown-item" asp-area="Profile" asp-controller="TwoFactor" asp-action="Index">
                                        <i class="bi bi-shield-lock me-2"></i>Two-Factor Auth</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <!-- Login/Register -->
                            <a class="btn btn-outline-dark btn-sm" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">Sign Up</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>

    <partial name="_Footer" />
       
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
