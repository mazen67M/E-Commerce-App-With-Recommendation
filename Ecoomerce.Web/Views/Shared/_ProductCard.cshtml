@model Ecommerce.Application.DTOs.Products.ProductDto

<div class="card h-100 shadow-sm product-card border-0 rounded-3 overflow-hidden">
    <!-- Product Image with Hover Effect -->
    <div class="position-relative overflow-hidden">
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductID" class="text-decoration-none">
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" class="card-img-top product-image" alt="@Model.Name" 
                     style="height: 220px; object-fit: cover; transition: transform 0.3s ease;">
            }
            else
            {
                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" 
                     style="height: 220px;">
                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                </div>
            }
        </a>
        
        <!-- Badges -->
        <div class="position-absolute top-0 start-0 p-2">
            @if (Model.IsAvailable && Model.DiscountPercentage > 0)
            {
                <span class="badge bg-danger mb-1 d-block">-@Model.DiscountPercentage%</span>
            }
        </div>
        
        <div class="position-absolute top-0 end-0 p-2">
            @if (!Model.IsAvailable)
            {
                <span class="badge bg-danger">Out of Stock</span>
            }
        </div>
        
        <!-- Quick Action Buttons -->
        <div class="position-absolute bottom-0 end-0 p-2 d-flex gap-2 product-actions">
            <button type="button" class="btn btn-sm btn-light rounded-circle shadow-sm" 
                    onclick="toggleWishlist(@Model.ProductID)" title="Add to Wishlist">
                <i class="bi bi-heart"></i>
            </button>
            <button type="button" class="btn btn-sm btn-light rounded-circle shadow-sm" 
                    onclick="quickView(@Model.ProductID)" title="Quick View">
                <i class="bi bi-eye"></i>
            </button>
        </div>
    </div>

    <!-- Product Info -->
    <div class="card-body d-flex flex-column p-3">
        <!-- Category Badge -->
        <div class="mb-2">
            <span class="badge bg-light text-dark">@Model.CategoryName</span>
            @if (!string.IsNullOrEmpty(Model.BrandName))
            {
                <span class="badge bg-light text-dark ms-1">@Model.BrandName</span>
            }
        </div>
        
        <!-- Product Title -->
        <h5 class="card-title mb-2">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductID" 
               class="text-decoration-none text-dark product-title">
                @Model.Name
            </a>
        </h5>
        
        <!-- Rating -->
        @if (Model.AverageRating > 0 || Model.ReviewCount > 0)
        {
            <div class="mb-2">
                <div class="d-flex align-items-center">
                    @for (int i = 1; i <= 5; i++)
                    {
                        @if (i <= Model.AverageRating)
                        {
                            <i class="bi bi-star-fill text-warning small"></i>
                        }
                        else if (i - 0.5 <= Model.AverageRating)
                        {
                            <i class="bi bi-star-half text-warning small"></i>
                        }
                        else
                        {
                            <i class="bi bi-star text-muted small"></i>
                        }
                    }
                    <small class="text-muted ms-2">
                        @if (Model.AverageRating > 0)
                        {
                            <span>@Model.AverageRating.ToString("F1")</span>
                        }
                        @if (Model.ReviewCount > 0)
                        {
                            <span class="ms-1">(@Model.ReviewCount review@(Model.ReviewCount != 1 ? "s" : ""))</span>
                        }
                    </small>
                </div>
            </div>
        }
        
        <!-- Description (Optional) -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text text-muted small flex-grow-1" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                @Model.Description
            </p>
        }

        <!-- Price and Add to Cart -->
        <div class="mt-auto pt-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    @if (Model.DiscountPercentage > 0)
                    {
                        <span class="text-decoration-line-through text-muted me-2 small">
                            @((Model.Price / (1 - Model.DiscountPercentage / 100)).ToString("N2")) L.E
                        </span>
                    }
                    <span class="product-price fw-bold text-primary">@Model.Price.ToString("N2") L.E</span>
                </div>
                
                @if (Model.IsAvailable)
                {
                    <button type="button" class="btn btn-primary btn-sm rounded-pill px-3" 
                            onclick="addToCart(@Model.ProductID)">
                        <i class="bi bi-cart-plus me-1"></i> Add
                    </button>
                }
                else
                {
                    <button type="button" class="btn btn-outline-secondary btn-sm rounded-pill px-3" disabled>
                        <i class="bi bi-x-circle me-1"></i> Unavailable
                    </button>
                }
            </div>
        </div>
    </div>
</div>

