@model Ecommerce.Application.DTOs.Products.ProductDto

<div class="card h-100 shadow-sm product-card">
    <!-- Product Image -->
    <div class="position-relative">
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" class="card-img-top product-image" alt="@Model.Name" 
                 style="height: 200px; object-fit: cover;">
        }
        else
        {
            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" 
                 style="height: 200px;">
                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
            </div>
        }
        
        @if (!Model.IsAvailable)
        {
            <div class="position-absolute top-0 end-0 m-2">
                <span class="badge bg-danger">Out of Stock</span>
            </div>
        }
    </div>

    <!-- Product Info -->
    <div class="card-body d-flex flex-column">
        <h5 class="card-title text-truncate" title="@Model.Name">@Model.Name</h5>
        
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="card-text text-muted small flex-grow-1" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                @Model.Description
            </p>
        }

        <!-- Category and Brand -->
        <div class="mb-2">
            <small class="text-muted">
                <i class="bi bi-tag"></i> @Model.CategoryName
                @if (!string.IsNullOrEmpty(Model.BrandName))
                {
                    <span class="ms-2"><i class="bi bi-building"></i> @Model.BrandName</span>
                }
            </small>
        </div>

        <!-- Rating -->
        @if (Model.AverageRating > 0)
        {
            <div class="mb-2">
                <div class="d-flex align-items-center">
                    @for (int i = 1; i <= 5; i++)
                    {
                        @if (i <= Model.AverageRating)
                        {
                            <i class="bi bi-star-fill text-warning"></i>
                        }
                        else if (i - 0.5 <= Model.AverageRating)
                        {
                            <i class="bi bi-star-half text-warning"></i>
                        }
                        else
                        {
                            <i class="bi bi-star text-muted"></i>
                        }
                    }
                    <small class="text-muted ms-2">(@Model.AverageRating.ToString("F1"))</small>
                </div>
            </div>
        }

        <!-- Price and Actions -->
        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="text-primary mb-0">@Model.Price.ToString("C")</h4>
                <div class="btn-group" role="group">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductID" 
                       class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye"></i>
                    </a>
                    @if (Model.IsAvailable)
                    {
                        <button type="button" class="btn btn-primary btn-sm" 
                                onclick="addToCart(@Model.ProductID)">
                            <i class="bi bi-cart-plus"></i>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
