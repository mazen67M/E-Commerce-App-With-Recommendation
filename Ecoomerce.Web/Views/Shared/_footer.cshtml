<!-- Minimal Footer -->
<footer class="footer-minimal">
    <div class="container">
        <div class="row g-4">
            <!-- Brand & Description -->
            <div class="col-lg-4 col-md-6">
                <h5 class="fw-bold mb-3">ShopSmart</h5>
                <p class="text-muted mb-4" style="font-size: 0.9rem;">
                    Discover quality products at great prices. Your trusted destination for online shopping.
                </p>
                <div class="social-icons">
                    <a href="#" title="Twitter"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" title="Facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" title="Instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>

            <!-- About -->
            <div class="col-lg-2 col-md-6">
                <h6>About</h6>
                <ul class="footer-links">
                    <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                    <li><a asp-controller="Product" asp-action="Index">Products</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li><a href="#">Careers</a></li>
                </ul>
            </div>

            <!-- Help -->
            <div class="col-lg-2 col-md-6">
                <h6>Help</h6>
                <ul class="footer-links">
                    <li><a asp-controller="Home" asp-action="FAQ">FAQs</a></li>
                    <li><a asp-controller="Home" asp-action="Shipping">Shipping</a></li>
                    <li><a asp-controller="Home" asp-action="Returns">Returns</a></li>
                    <li><a asp-area="Profile" asp-controller="OrderHistory" asp-action="Index">Order Status</a></li>
                </ul>
            </div>

            <!-- Legal -->
            <div class="col-lg-2 col-md-6">
                <h6>Legal</h6>
                <ul class="footer-links">
                    <li><a asp-controller="Home" asp-action="Terms">Terms of Service</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                    <li><a href="#">Cookie Policy</a></li>
                    <li><a href="#">Accessibility</a></li>
                </ul>
            </div>

            <!-- Newsletter -->
            <div class="col-lg-2 col-md-6">
                <h6>Connect</h6>
                <p class="text-muted" style="font-size: 0.85rem;">Subscribe to get updates on new arrivals and offers.</p>
                <form class="mt-3">
                    <div class="input-group input-group-sm">
                        <input type="email" class="form-control" placeholder="Your email" style="border-radius: var(--radius-md) 0 0 var(--radius-md);">
                        <button type="submit" class="btn btn-primary" style="border-radius: 0 var(--radius-md) var(--radius-md) 0;">
                            <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-top mt-5 pt-4">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="text-muted mb-0" style="font-size: 0.85rem;">
                        Â© @DateTime.Now.Year ShopSmart. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <!-- Payment Methods -->
                    <div class="d-flex justify-content-center justify-content-md-end gap-2">
                        <img src="https://cdn-icons-png.flaticon.com/24/349/349221.png" alt="Visa" height="24">
                        <img src="https://cdn-icons-png.flaticon.com/24/349/349228.png" alt="Mastercard" height="24">
                        <img src="https://cdn-icons-png.flaticon.com/24/349/349230.png" alt="Amex" height="24">
                        <img src="https://cdn-icons-png.flaticon.com/24/196/196566.png" alt="PayPal" height="24">
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>