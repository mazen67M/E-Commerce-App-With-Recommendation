@model IEnumerable<Ecommerce.Application.DTOs.Reporting.InventoryReportDto>
@{
    ViewData["Title"] = "Inventory Report";
    var summary = ViewBag.Summary as Ecommerce.Application.DTOs.Reporting.InventorySummaryDto;
}

<div class="container-fluid">
    @await Html.PartialAsync("_ReportingNavigation")
    
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h1 class="h4 mb-0">Inventory Report</h1>
                    <p class="text-muted mb-0">Monitor stock levels and inventory health</p>
                </div>
            </div>
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (summary != null)
            {
                <div class="row g-3 mb-4">
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-muted small">Total Products</div>
                                        <div class="fs-4 fw-semibold text-primary">@summary.TotalProducts</div>
                                    </div>
                                    <i class="bi bi-box-seam fs-2 text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-muted small">Low Stock</div>
                                        <div class="fs-4 fw-semibold text-warning">@summary.LowStockProducts</div>
                                    </div>
                                    <i class="bi bi-exclamation-triangle fs-2 text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-muted small">Out of Stock</div>
                                        <div class="fs-4 fw-semibold text-danger">@summary.OutOfStockProducts</div>
                                    </div>
                                    <i class="bi bi-x-circle fs-2 text-danger"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-muted small">Total Value</div>
                                        <div class="fs-4 fw-semibold text-success">@summary.TotalInventoryValue.ToString("C")</div>
                                    </div>
                                    <i class="bi bi-currency-dollar fs-2 text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-12 col-md-6">
                            <form method="get" class="d-flex gap-2">
                                <input type="number" name="lowStockThreshold" class="form-control" 
                                       placeholder="Low Stock Threshold" value="@ViewBag.LowStockThreshold" min="0">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-funnel"></i> Filter
                                </button>
                            </form>
                        </div>
                        <div class="col-12 col-md-6 text-md-end">
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("LowStock")" class="btn btn-sm btn-outline-warning">Low Stock</a>
                                <a href="@Url.Action("OutOfStock")" class="btn btn-sm btn-outline-danger">Out of Stock</a>
                                <a href="@Url.Action("InventoryLogs")" class="btn btn-sm btn-outline-secondary">Logs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Current Stock</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.CurrentStock == 0 ? "table-danger" : item.IsLowStock ? "table-warning" : "")">
                                <td>@item.ProductId</td>
                                <td>@item.ProductName</td>
                                <td>@item.CategoryName</td>
                                <td>@item.BrandName</td>
                                <td>
                                    <span class="badge @(item.CurrentStock == 0 ? "bg-danger" : item.IsLowStock ? "bg-warning" : "bg-success")">
                                        @item.CurrentStock
                                    </span>
                                </td>
                                <td>@item.Price.ToString("C")</td>
                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Unavailable</span>
                                    }
                                </td>
                                <td>@item.LastUpdated.ToString("MM/dd/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="text-muted mt-2">No inventory data available.</p>
                    </div>
                }
            </div>
        </div>
        </div>
    </div>
</div>
