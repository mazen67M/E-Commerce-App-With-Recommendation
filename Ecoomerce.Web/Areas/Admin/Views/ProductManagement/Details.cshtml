@model Ecommerce.Application.DTOs.Products.ProductDto
@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="ProductManagement" asp-action="Index">Product Management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Product Details</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold text-primary">
                        <i class="bi bi-info-circle"></i> Product Details
                    </h1>
                    <p class="text-muted">Detailed information about @Model.Name</p>
                </div>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Product
                    </a>
                    <button type="button" class="btn btn-outline-danger" 
                            onclick="confirmDelete(@Model.ProductID, '@Model.Name')">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Information -->
    <div class="row">
        <!-- Main Product Info -->
        <div class="col-lg-8">
            <!-- Basic Information Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Basic Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold text-muted" style="width: 120px;">Product ID:</td>
                                    <td>@Model.ProductID</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted">Name:</td>
                                    <td class="fw-bold">@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted">Category:</td>
                                    <td><span class="badge bg-secondary">@Model.CategoryName</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted">Brand:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.BrandName))
                                        {
                                            <span class="badge bg-info">@Model.BrandName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No brand specified</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted">Price:</td>
                                    <td><h5 class="text-success mb-0">@Model.Price.ToString("C")</h5></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold text-muted" style="width: 120px;">Status:</td>
                                    <td>
                                        @if (Model.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Out of Stock</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted">Rating:</td>
                                    <td>
                                        @if (Model.AverageRating > 0)
                                        {
                                            <div class="d-flex align-items-center">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    @if (i <= Model.AverageRating)
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else if (i - 0.5 <= Model.AverageRating)
                                                    {
                                                        <i class="bi bi-star-half text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-muted"></i>
                                                    }
                                                }
                                                <span class="ms-2">@Model.AverageRating.ToString("F1") (@Model.ReviewCount reviews)</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No ratings yet</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted">Created:</td>
                                    <td><span class="text-muted">@DateTime.Now.ToString("MMM dd, yyyy")</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold text-muted">Updated:</td>
                                    <td><span class="text-muted">@DateTime.Now.ToString("MMM dd, yyyy")</span></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Description</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="mb-0">@Model.Description</p>
                    }
                    else
                    {
                        <p class="text-muted mb-0"><em>No description provided</em></p>
                    }
                </div>
            </div>

            <!-- Tags Card -->
            @if (Model.Tags != null && Model.Tags.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-tags"></i> Tags</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var tag in Model.Tags)
                        {
                            <span class="badge bg-light text-dark me-2 mb-2">#@tag</span>
                        }
                    </div>
                </div>
            }

            <!-- Analytics Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Analytics & Performance</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-primary">156</h4>
                                <small class="text-muted">Total Views</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-success">23</h4>
                                <small class="text-muted">Orders</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-warning">12</h4>
                                <small class="text-muted">In Wishlists</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <h4 class="text-info">8.5%</h4>
                            <small class="text-muted">Conversion Rate</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Product Image -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-image"></i> Product Image</h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                    {
                        <img src="@Model.ImageURL" alt="@Model.Name" class="img-fluid rounded mb-3" 
                             style="max-height: 300px; object-fit: cover;">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary btn-sm" onclick="changeImage()">
                                <i class="bi bi-camera"></i> Change Image
                            </button>
                            <button class="btn btn-outline-secondary btn-sm" onclick="viewFullImage()">
                                <i class="bi bi-arrows-fullscreen"></i> View Full Size
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded mb-3" 
                             style="height: 300px;">
                            <div class="text-center">
                                <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                <p class="text-muted mt-2">No image uploaded</p>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary btn-sm" onclick="uploadImage()">
                                <i class="bi bi-cloud-upload"></i> Upload Image
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary" onclick="toggleStatus(@Model.ProductID)">
                            @if (Model.IsAvailable)
                            {
                                <i class="bi bi-eye-slash"></i> <span>Mark as Unavailable</span>
                            }
                            else
                            {
                                <i class="bi bi-eye"></i> <span>Mark as Available</span>
                            }
                        </button>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductID" 
                           class="btn btn-outline-success" target="_blank">
                            <i class="bi bi-box-arrow-up-right"></i> View on Store
                        </a>
                        <button class="btn btn-outline-info" onclick="duplicateProduct(@Model.ProductID)">
                            <i class="bi bi-files"></i> Duplicate Product
                        </button>
                        <button class="btn btn-outline-warning" onclick="exportProduct(@Model.ProductID)">
                            <i class="bi bi-download"></i> Export Data
                        </button>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <small class="text-muted">2 hours ago</small>
                            <p class="mb-1">Product viewed by customer</p>
                        </div>
                        <div class="timeline-item">
                            <small class="text-muted">1 day ago</small>
                            <p class="mb-1">Added to 3 wishlists</p>
                        </div>
                        <div class="timeline-item">
                            <small class="text-muted">2 days ago</small>
                            <p class="mb-1">Price updated to @Model.Price.ToString("C")</p>
                        </div>
                        <div class="timeline-item">
                            <small class="text-muted">1 week ago</small>
                            <p class="mb-0">Product created</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Product List
            </a>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the product "<span id="productName"></span>"?</p>
                <p class="text-danger"><strong>This action cannot be undone.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Product</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let productToDelete = null;

        function confirmDelete(productId, productName) {
            productToDelete = productId;
            document.getElementById('productName').textContent = productName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (productToDelete) {
                $.ajax({
                    url: '@Url.Action("Delete", "ProductManagement", new { area = "Admin" })',
                    type: 'POST',
                    data: { 
                        id: productToDelete,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                        
                        if (response.success) {
                            showNotification(response.message, 'success');
                            setTimeout(() => {
                                window.location.href = '@Url.Action("Index", "ProductManagement", new { area = "Admin" })';
                            }, 1500);
                        } else {
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function() {
                        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                        showNotification('Failed to delete product', 'error');
                    }
                });
            }
        });

        function toggleStatus(productId) {
            $.ajax({
                url: '@Url.Action("ToggleStatus", "ProductManagement", new { area = "Admin" })',
                type: 'POST',
                data: { id: productId },
                success: function(response) {
                    if (response.success) {
                        showNotification(response.message, 'success');
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        showNotification(response.message, 'error');
                    }
                },
                error: function() {
                    showNotification('Failed to update product status', 'error');
                }
            });
        }

        function changeImage() {
            showNotification('Image upload functionality would be implemented here', 'info');
        }

        function viewFullImage() {
            const imageUrl = '@Model.ImageURL';
            if (imageUrl) {
                window.open(imageUrl, '_blank');
            }
        }

        function uploadImage() {
            showNotification('Image upload functionality would be implemented here', 'info');
        }

        function duplicateProduct(productId) {
            showNotification('Product duplication functionality would be implemented here', 'info');
        }

        function exportProduct(productId) {
            showNotification('Product export functionality would be implemented here', 'info');
        }

        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 
                             type === 'error' ? 'alert-danger' : 
                             type === 'warning' ? 'alert-warning' : 'alert-info';
            
            const notification = $(`
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 1050; min-width: 300px;">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
            
            $('body').append(notification);
            
            setTimeout(function() {
                notification.alert('close');
            }, 3000);
        }
    </script>
}

@section Styles {
    <style>
        .timeline-item {
            border-left: 2px solid #dee2e6;
            padding-left: 15px;
            margin-bottom: 15px;
            position: relative;
        }
        
        .timeline-item::before {
            content: '';
            position: absolute;
            left: -5px;
            top: 5px;
            width: 8px;
            height: 8px;
            background-color: #0d6efd;
            border-radius: 50%;
        }
        
        .timeline-item:last-child {
            margin-bottom: 0;
        }
        
        .table-borderless td {
            border: none;
            padding: 0.5rem 0;
        }
        
        .border-end {
            border-right: 1px solid #dee2e6 !important;
        }
        
        .card-header {
            border-bottom: 1px solid #dee2e6;
        }
    </style>
}
