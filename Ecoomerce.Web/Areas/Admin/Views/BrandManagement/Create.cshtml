@model Ecommerce.Application.DTOs.Products.BrandDto
@{
    ViewData["Title"] = "Create Brand";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="BrandManagement" asp-action="Index">Brand Management</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create Brand</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-plus-circle"></i> Create New Brand
            </h1>
            <p class="text-muted">Add a new brand to organize your products by manufacturer</p>
        </div>
    </div>

    <!-- Brand Form -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Brand Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Brand Name -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <label asp-for="Name" class="form-label">Brand Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter brand name" id="brandName">
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <div class="form-text">Enter the official name of the brand or manufacturer</div>
                                <div id="nameAvailability" class="mt-2"></div>
                            </div>
                        </div>

                        <!-- Brand Guidelines -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <h6><i class="bi bi-info-circle"></i> Brand Naming Guidelines</h6>
                                    <ul class="mb-0">
                                        <li>Use the official brand name as it appears on products</li>
                                        <li>Maintain consistent capitalization (e.g., "Apple", "Samsung", "Nike")</li>
                                        <li>Avoid abbreviations unless that's the official name</li>
                                        <li>Each brand name must be unique in the system</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left"></i> Back to Brands
                                    </a>
                                    <div>
                                        <button type="button" class="btn btn-outline-primary me-2" onclick="previewBrand()">
                                            <i class="bi bi-eye"></i> Preview
                                        </button>
                                        <button type="submit" class="btn btn-success" id="submitBtn">
                                            <i class="bi bi-check-circle"></i> Create Brand
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Preview Panel -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-eye"></i> Live Preview</h5>
                </div>
                <div class="card-body text-center">
                    <div id="brandPreview">
                        <!-- Brand Icon -->
                        <div class="mb-3">
                            <div id="brandIcon" class="brand-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                                 style="width: 80px; height: 80px; font-size: 2rem;">
                                BR
                            </div>
                        </div>

                        <!-- Brand Name -->
                        <h5 id="brandNamePreview" class="fw-bold">Brand Name</h5>
                        
                        <!-- Brand ID -->
                        <p class="text-muted small">Brand ID: <span id="brandIdPreview">Auto-generated</span></p>

                        <!-- URL Slug -->
                        <div class="mb-3">
                            <small class="text-muted">URL Slug:</small><br>
                            <code id="brandSlug">/brand/brand-name</code>
                        </div>

                        <div class="alert alert-light">
                            <small class="text-muted">
                                <i class="bi bi-lightbulb"></i>
                                This is how your brand will appear in product listings and filters.
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tips Card -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="bi bi-lightbulb"></i> Brand Best Practices</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><i class="bi bi-check text-success"></i> Use official brand names</li>
                        <li class="mb-2"><i class="bi bi-check text-success"></i> Maintain consistent spelling</li>
                        <li class="mb-2"><i class="bi bi-check text-success"></i> Check for duplicates before creating</li>
                        <li class="mb-2"><i class="bi bi-check text-success"></i> Consider brand recognition</li>
                        <li class="mb-0"><i class="bi bi-check text-success"></i> Keep names concise and clear</li>
                    </ul>
                </div>
            </div>

            <!-- Popular Brands Examples -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-star"></i> Popular Brand Examples</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4 mb-2">
                            <div class="brand-icon bg-dark text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                                 style="width: 40px; height: 40px; font-size: 0.75rem;">AP</div>
                            <div class="small mt-1">Apple</div>
                        </div>
                        <div class="col-4 mb-2">
                            <div class="brand-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                                 style="width: 40px; height: 40px; font-size: 0.75rem;">SA</div>
                            <div class="small mt-1">Samsung</div>
                        </div>
                        <div class="col-4 mb-2">
                            <div class="brand-icon bg-warning text-dark rounded-circle d-inline-flex align-items-center justify-content-center" 
                                 style="width: 40px; height: 40px; font-size: 0.75rem;">NI</div>
                            <div class="small mt-1">Nike</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let nameCheckTimeout;

        // Live preview functionality
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('brandName').addEventListener('input', function() {
                updatePreview();
                checkNameAvailability();
            });
            updatePreview();
        });

        function updatePreview() {
            const brandName = document.getElementById('brandName').value || 'Brand Name';
            
            // Update brand name preview
            document.getElementById('brandNamePreview').textContent = brandName;
            
            // Update brand icon with initials
            const initials = brandName.split(' ')
                .map(word => word.charAt(0))
                .join('')
                .substring(0, 2)
                .toUpperCase() || 'BR';
            document.getElementById('brandIcon').textContent = initials;
            
            // Update URL slug
            const slug = brandName.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '');
            document.getElementById('brandSlug').textContent = `/brand/${slug}`;
        }

        function checkNameAvailability() {
            const brandName = document.getElementById('brandName').value.trim();
            const availabilityDiv = document.getElementById('nameAvailability');
            
            if (brandName.length < 2) {
                availabilityDiv.innerHTML = '';
                return;
            }

            // Clear previous timeout
            clearTimeout(nameCheckTimeout);
            
            // Set new timeout for debouncing
            nameCheckTimeout = setTimeout(() => {
                $.ajax({
                    url: '@Url.Action("CheckBrandName", "BrandManagement", new { area = "Admin" })',
                    type: 'GET',
                    data: { name: brandName },
                    success: function(response) {
                        if (response.exists) {
                            availabilityDiv.innerHTML = '<small class="text-danger"><i class="bi bi-x-circle"></i> This brand name already exists</small>';
                            document.getElementById('submitBtn').disabled = true;
                        } else {
                            availabilityDiv.innerHTML = '<small class="text-success"><i class="bi bi-check-circle"></i> Brand name is available</small>';
                            document.getElementById('submitBtn').disabled = false;
                        }
                    },
                    error: function() {
                        availabilityDiv.innerHTML = '<small class="text-muted"><i class="bi bi-exclamation-triangle"></i> Unable to check availability</small>';
                    }
                });
            }, 500);
        }

        function previewBrand() {
            const brandName = document.getElementById('brandName').value;
            
            if (!brandName.trim()) {
                showNotification('Please enter a brand name first', 'warning');
                return;
            }

            const message = `Brand: ${brandName}\nURL: /brand/${brandName.toLowerCase().replace(/[^a-z0-9]+/g, '-')}`;
            alert(message);
        }

        // Form validation enhancement
        document.querySelector('form').addEventListener('submit', function(e) {
            const brandName = document.getElementById('brandName').value.trim();

            if (!brandName) {
                e.preventDefault();
                showNotification('Brand name is required', 'error');
                return;
            }

            if (brandName.length < 2) {
                e.preventDefault();
                showNotification('Brand name must be at least 2 characters long', 'error');
                return;
            }

            // Check if submit button is disabled (name exists)
            if (document.getElementById('submitBtn').disabled) {
                e.preventDefault();
                showNotification('Please choose a different brand name', 'error');
                return;
            }

            // Show loading state
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Creating Brand...';
            submitBtn.disabled = true;
        });

        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 
                             type === 'error' ? 'alert-danger' : 
                             type === 'warning' ? 'alert-warning' : 'alert-info';
            
            const notification = $(`
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 1050; min-width: 300px;">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
            
            $('body').append(notification);
            
            setTimeout(function() {
                notification.alert('close');
            }, 3000);
        }
    </script>
}

@section Styles {
    <style>
        .form-label {
            font-weight: 600;
        }
        
        .card-header {
            border-bottom: 1px solid #dee2e6;
        }
        
        .brand-icon {
            font-weight: bold;
        }
        
        code {
            background-color: #f8f9fa;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
        }
        
        .btn-group .btn {
            border-radius: 0.375rem;
        }
        
        .btn-group .btn:not(:last-child) {
            margin-right: 0.25rem;
        }
    </style>
}
