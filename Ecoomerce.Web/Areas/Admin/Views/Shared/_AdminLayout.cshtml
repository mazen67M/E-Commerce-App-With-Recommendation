<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="catalogDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Catalog
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="catalogDropdown">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="ProductManagement" asp-action="Index">
                                    <i class="bi bi-box-seam"></i> Products
                                </a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="CategoryManagement" asp-action="Index">
                                    <i class="bi bi-tags"></i> Categories
                                </a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="BrandManagement" asp-action="Index">
                                    <i class="bi bi-building"></i> Brands
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="OrderManagement" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="UserManagement" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="adminReportsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Reports
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminReportsDropdown">
                                <li><a class="dropdown-item" asp-area="Reporting" asp-controller="Sales" asp-action="Index">
                                    <i class="bi bi-graph-up"></i> Sales
                                </a></li>
                                <li><a class="dropdown-item" asp-area="Reporting" asp-controller="Inventory" asp-action="Index">
                                    <i class="bi bi-box"></i> Inventory
                                </a></li>
                                <li><a class="dropdown-item" asp-area="Reporting" asp-controller="User" asp-action="Index">
                                    <i class="bi bi-people"></i> Customers
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container my-3">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            @RenderBody()
            @Html.AntiForgeryToken()
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>