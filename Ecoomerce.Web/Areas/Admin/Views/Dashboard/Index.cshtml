@using Ecommerce.Application.ViewModels.Admin_Panel
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h3 mb-1">@ViewData["Title"]</h1>
            <p class="text-muted mb-0">Overview of store performance and quick actions</p>
        </div>
        <div class="d-flex gap-2 mt-3 mt-sm-0">
            <div class="btn-group" role="group">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="ProductManagement" asp-action="Create">
                    <i class="bi bi-plus-lg"></i> Add Product
                </a>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="CategoryManagement" asp-action="Create">
                    <i class="bi bi-plus-lg"></i> Add Category
                </a>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="BrandManagement" asp-action="Create">
                    <i class="bi bi-plus-lg"></i> Add Brand
                </a>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0 card-hover">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small mb-1">Total Sales (Today)</div>
                            <div class="fs-3 fw-bold text-success">$@Model.TodayRevenue.ToString("N2")</div>
                            <small class="text-success"><i class="bi bi-arrow-up"></i> Today</small>
                        </div>
                        <div class="icon-circle bg-success bg-opacity-10">
                            <i class="bi bi-cash-stack fs-2 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0 card-hover">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small mb-1">Orders</div>
                            <div class="fs-3 fw-bold text-primary">@Model.TotalOrders</div>
                            <small class="text-muted">Total orders</small>
                        </div>
                        <div class="icon-circle bg-primary bg-opacity-10">
                            <i class="bi bi-bag-check fs-2 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0 card-hover">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small mb-1">Products</div>
                            <div class="fs-3 fw-bold text-warning">@Model.TotalProducts</div>
                            <small class="text-muted">In catalog</small>
                        </div>
                        <div class="icon-circle bg-warning bg-opacity-10">
                            <i class="bi bi-box-seam fs-2 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0 card-hover">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small mb-1">Customers</div>
                            <div class="fs-3 fw-bold text-info">@Model.TotalUsers</div>
                            <small class="text-muted">Registered</small>
                        </div>
                        <div class="icon-circle bg-info bg-opacity-10">
                            <i class="bi bi-people fs-2 text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-xl-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="fw-semibold">Recent Orders</span>
                        <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="OrderManagement"
                            asp-action="Index">View all</a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Order #</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                                {
                                    foreach (var o in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">#@o.OrderID</span></td>
                                            <td>
                                                @{
                                                    var statusClass = o.Status.ToString().ToLower() switch
                                                    {
                                                        "pending" => "bg-warning",
                                                        "processing" => "bg-info",
                                                        "shipped" => "bg-primary",
                                                        "delivered" => "bg-success",
                                                        "cancelled" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@o.Status</span>
                                            </td>
                                            <td class="fw-semibold text-success">$@o.TotalAmount.ToString("N2")</td>
                                            <td class="text-muted">@o.OrderDate.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                            No recent orders.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-semibold">Quick Links</div>
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action" asp-area="Admin"
                        asp-controller="ProductManagement" asp-action="Index">
                        <i class="bi bi-box-seam"></i> Manage Products
                    </a>
                    <a class="list-group-item list-group-item-action" asp-area="Admin"
                        asp-controller="CategoryManagement" asp-action="Index">
                        <i class="bi bi-tags"></i> Manage Categories
                    </a>
                    <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="BrandManagement"
                        asp-action="Index">
                        <i class="bi bi-building"></i> Manage Brands
                    </a>
                    <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="OrderManagement"
                        asp-action="Index">
                        <i class="bi bi-bag"></i> Manage Orders
                    </a>
                    <a class="list-group-item list-group-item-action" asp-area="Admin" asp-controller="UserManagement"
                        asp-action="Index">
                        <i class="bi bi-people"></i> Manage Customers
                    </a>
                    <a class="list-group-item list-group-item-action" asp-area="Reporting" asp-controller="Sales"
                        asp-action="Index">
                        <i class="bi bi-graph-up"></i> Sales Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .icon-circle {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-hover {
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, .1) !important;
        }

        .card-header {
            border-bottom: 1px solid #e9ecef;
            padding: 1rem 1.25rem;
        }

        .list-group-item {
            border-left: 3px solid transparent;
            transition: all 0.2s ease;
        }

        .list-group-item:hover {
            border-left-color: #0d6efd;
            background-color: #f8f9fa;
            padding-left: 1.5rem;
        }

        .btn-group .btn {
            border-radius: 0;
        }

        .btn-group .btn:first-child {
            border-top-left-radius: 0.375rem;
            border-bottom-left-radius: 0.375rem;
        }

        .btn-group .btn:last-child {
            border-top-right-radius: 0.375rem;
            border-bottom-right-radius: 0.375rem;
        }

        .table thead th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            color: #6c757d;
        }

        @@media (max-width: 768px) {
            .icon-circle {
                width: 50px;
                height: 50px;
            }

            .icon-circle i {
                font-size: 1.5rem !important;
            }
        }
    </style>
}
