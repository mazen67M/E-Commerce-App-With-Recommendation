@{
    ViewData["Title"] = "Customer Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-0">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Manage all customer accounts</p>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-area="Reporting" asp-controller="User" asp-action="Index">
            <i class="bi bi-graph-up"></i> User Reports
        </a>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="UserManagement" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add Customer
        </a>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Total Customers</div>
                        <div class="fs-5 fw-semibold">—</div>
                    </div>
                    <i class="bi bi-people fs-2 text-primary"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Active This Month</div>
                        <div class="fs-5 fw-semibold">—</div>
                    </div>
                    <i class="bi bi-person-check fs-2 text-success"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">New This Week</div>
                        <div class="fs-5 fw-semibold">—</div>
                    </div>
                    <i class="bi bi-person-plus fs-2 text-info"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Avg Orders</div>
                        <div class="fs-5 fw-semibold">—</div>
                    </div>
                    <i class="bi bi-bag fs-2 text-warning"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <div class="row align-items-center g-2">
            <div class="col-12 col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search customers by name or email..." />
                </div>
            </div>
            <div class="col-12 col-md-6 text-md-end">
                <select class="form-select form-select-sm d-inline-block w-auto">
                    <option>All Customers</option>
                    <option>Active</option>
                    <option>Inactive</option>
                    <option>New This Month</option>
                </select>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Joined</th>
                        <th>Orders</th>
                        <th>Total Spent</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">No customers to display.</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

