@model Ecommerce.Application.ViewModels.User___Account.TwoFactorSettingsViewModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1 fw-bold">Two-Factor Authentication</h2>
                    <p class="text-muted mb-0">Add an extra layer of security to your account</p>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="bg-@(Model.IsTwoFactorEnabled ? "success" : "secondary") bg-opacity-10 rounded-circle p-3 me-3">
                                <i class="bi bi-shield-lock fs-4 text-@(Model.IsTwoFactorEnabled ? "success" : "secondary")"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Authenticator App</h5>
                                <p class="text-muted mb-0 small">
                                    @if (Model.IsTwoFactorEnabled)
                                    {
                                        <span class="text-success"><i class="bi bi-check-circle me-1"></i>Enabled</span>
                                    }
                                    else
                                    {
                                        <span>Not configured</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div>
                            @if (Model.IsTwoFactorEnabled)
                            {
                                <form asp-action="Disable" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-x-circle me-1"></i>Disable
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a asp-action="EnableAuthenticator" class="btn btn-primary btn-sm">
                                    <i class="bi bi-shield-plus me-1"></i>Enable
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.IsTwoFactorEnabled)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Recovery Codes</h6>
                        <p class="text-muted mb-3">
                            You have <strong>@Model.RecoveryCodesLeft</strong> recovery codes remaining.
                            Recovery codes can be used to access your account if you lose your authenticator device.
                        </p>
                        @if (Model.RecoveryCodesLeft == 0)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                You have no recovery codes left. Generate new ones to ensure you don't lose access to your account.
                            </div>
                        }
                        else if (Model.RecoveryCodesLeft < 3)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                You only have @Model.RecoveryCodesLeft recovery codes left. Consider generating new ones.
                            </div>
                        }
                    </div>
                </div>

                <div class="card border-warning">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Reset Authenticator</h6>
                        <p class="text-muted mb-3">
                            If you've lost access to your authenticator app, you can reset your authenticator key.
                            This will invalidate all existing codes.
                        </p>
                        <form asp-action="ResetAuthenticator" method="post">
                            <button type="submit" class="btn btn-outline-warning btn-sm"
                                    onclick="return confirm('This will reset your authenticator. Are you sure?');">
                                <i class="bi bi-arrow-counterclockwise me-1"></i>Reset Authenticator
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card bg-light border-0">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Why use Two-Factor Authentication?</h6>
                        <ul class="mb-0">
                            <li>Adds an extra layer of security beyond your password</li>
                            <li>Protects your account even if your password is compromised</li>
                            <li>Uses time-based codes from an app like Google Authenticator or Authy</li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
