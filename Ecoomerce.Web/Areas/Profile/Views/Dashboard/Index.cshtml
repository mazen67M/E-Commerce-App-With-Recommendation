@{
    ViewData["Title"] = "My Account";
}

<div class="d-flex flex-wrap align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h4 mb-1">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Welcome back, @User?.Identity?.Name</p>
    </div>
    <div class="d-flex gap-2 mt-3 mt-sm-0">
        <a class="btn btn-primary" asp-area="Profile" asp-controller="Wishlist" asp-action="Index">
            <i class="bi bi-heart"></i> View Wishlist
        </a>
        <a class="btn btn-outline-secondary" asp-area="Profile" asp-controller="ManageProfile" asp-action="Index">
            <i class="bi bi-gear"></i> Account Settings
        </a>
    </div>
    </div>

<div class="row g-3 mb-4">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="text-muted">Orders</div>
                <div class="fs-4 fw-semibold">—</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="text-muted">Wishlist</div>
                <div class="fs-4 fw-semibold">—</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="text-muted">Addresses</div>
                <div class="fs-4 fw-semibold">—</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="text-muted">Coupons</div>
                <div class="fs-4 fw-semibold">—</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-xl-8">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white fw-semibold">Recent Orders</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">No recent orders.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-xl-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white fw-semibold">Quick Links</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action" asp-area="Profile" asp-controller="OrderHistory" asp-action="Index">
                    <i class="bi bi-receipt"></i> View All Orders
                </a>
                <a class="list-group-item list-group-item-action" asp-area="Profile" asp-controller="ManageProfile" asp-action="Index">
                    <i class="bi bi-geo"></i> Manage Addresses
                </a>
                <a class="list-group-item list-group-item-action" asp-area="Profile" asp-controller="Wishlist" asp-action="Index">
                    <i class="bi bi-heart"></i> Manage Wishlist
                </a>
            </div>
        </div>
    </div>
</div>