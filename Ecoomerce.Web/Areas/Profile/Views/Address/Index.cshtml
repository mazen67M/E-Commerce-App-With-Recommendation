@model Ecommerce.Application.ViewModels.Profile.AddressListViewModel
@{
    ViewData["Title"] = "Address Book";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold">Address Book</h2>
            <p class="text-muted mb-0">Manage your shipping and billing addresses</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add New Address
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Addresses.Any())
    {
        <div class="row g-4">
            @foreach (var address in Model.Addresses)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 @(address.IsDefaultShipping || address.IsDefaultBilling ? "border-primary" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <span class="badge bg-secondary mb-2">@address.AddressName</span>
                                    @if (address.IsDefaultShipping)
                                    {
                                        <span class="badge bg-success mb-2 ms-1">
                                            <i class="bi bi-truck me-1"></i>Default Shipping
                                        </span>
                                    }
                                    @if (address.IsDefaultBilling)
                                    {
                                        <span class="badge bg-info mb-2 ms-1">
                                            <i class="bi bi-credit-card me-1"></i>Default Billing
                                        </span>
                                    }
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@address.AddressId">
                                                <i class="bi bi-pencil me-2"></i>Edit
                                            </a>
                                        </li>
                                        @if (!address.IsDefaultShipping)
                                        {
                                            <li>
                                                <form asp-action="SetDefault" method="post">
                                                    <input type="hidden" name="id" value="@address.AddressId" />
                                                    <input type="hidden" name="type" value="shipping" />
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-truck me-2"></i>Set as Default Shipping
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        @if (!address.IsDefaultBilling)
                                        {
                                            <li>
                                                <form asp-action="SetDefault" method="post">
                                                    <input type="hidden" name="id" value="@address.AddressId" />
                                                    <input type="hidden" name="type" value="billing" />
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-credit-card me-2"></i>Set as Default Billing
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@address.AddressId" method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this address?');">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-trash me-2"></i>Delete
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <h6 class="fw-bold mb-2">@address.RecipientName</h6>
                            @if (!string.IsNullOrEmpty(address.Phone))
                            {
                                <p class="text-muted mb-2 small">
                                    <i class="bi bi-telephone me-1"></i>@address.Phone
                                </p>
                            }
                            <p class="mb-0">
                                @address.AddressLine1<br />
                                @if (!string.IsNullOrEmpty(address.AddressLine2))
                                {
                                    @address.AddressLine2<br />
                                }
                                @address.City@(!string.IsNullOrEmpty(address.State) ? $", {address.State}" : "")<br />
                                @address.PostalCode, @address.Country
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-geo-alt text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No addresses saved</h4>
            <p class="text-muted mb-4">Add your first address to make checkout faster.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Add Address
            </a>
        </div>
    }
</div>
